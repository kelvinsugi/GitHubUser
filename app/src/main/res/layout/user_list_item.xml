<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ivUserProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/ivUserProfileImage"
        app:layout_constraintTop_toTopOf="@id/ivUserProfileImage"
        app:layout_constraintBottom_toBottomOf="@id/ivUserProfileImage"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvUserName"
            style="@style/Body1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Github Username" />

        <TextView
            android:id="@+id/tvUserUrl"
            style="@style/Body2.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="username@github.com" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>