<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvListItem"
    android:background="@drawable/search_bg_rounded_top"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp">

    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ivUserProfileImage"
            android:layout_width="40dp"
            tools:src="@drawable/rounded_placeholder"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:includeFontPadding="false"
                    android:id="@+id/tvName"
                    style="@style/Body1.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Github Username" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_gravity="top"
                    android:textSize="10sp"
                    android:id="@+id/tvUserName"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="\@Github" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvUserJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Director of Netshare Company" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="10sp"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Taipei, Taiwan"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="10sp"
                    android:id="@+id/tvUserUrl"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="username@github.com" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>





</LinearLayout>